<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FinancialPlannerApp" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to the theme's background color. -->
        <item name="windowSplashScreenBackground">?android:attr/colorBackground</item>
        
        <!-- Use an icon as the splash screen destination. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.FinancialPlannerApp</item>
    </style>
</resources>