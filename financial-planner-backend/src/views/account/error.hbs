{{!-- Error page for account deletion issues --}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header bg-danger text-white">
          <h3>{{title}}</h3>
        </div>
        <div class="card-body">
          <div class="alert alert-danger mb-4">
            <i class="fas fa-exclamation-circle"></i> {{error}}
          </div>
          
          <p>
            Please try again or contact support if you continue to experience issues.
          </p>
          
          <div class="d-grid gap-2">
            <a href="/account/delete" class="btn btn-primary">Try Again</a>
            <a href="/" class="btn btn-outline-secondary">Return to Home</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>