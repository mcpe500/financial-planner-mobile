<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.financialplannerapp.fragments.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_passcodeFragment"
            app:destination="@id/passcodeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/passcodeFragment"
        android:name="com.example.financialplannerapp.fragments.auth.PasscodeFragment"
        android:label="Passcode Login"
        tools:layout="@layout/fragment_passcode">
        <action
            android:id="@+id/action_passcodeFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.financialplannerapp.fragments.main.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.financialplannerapp.fragments.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_pinBiometricFragment"
            app:destination="@id/pinBiometricFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_dataSyncFragment"
            app:destination="@id/dataSyncFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_backupRestoreFragment"
            app:destination="@id/backupRestoreFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_helpAndFAQFragment"
            app:destination="@id/helpAndFAQFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_contactUsReportFragment"
            app:destination="@id/contactUsReportFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.financialplannerapp.fragments.settings.UserProfileFragment"
        android:label="Profil Pengguna"
        tools:layout="@layout/fragment_user_profile" />

    <fragment
        android:id="@+id/pinBiometricFragment"
        android:name="com.example.financialplannerapp.fragments.settings.PinBiometricFragment"
        android:label="Pengaturan Keamanan"
        tools:layout="@layout/fragment_pin_biometric" />

    <fragment
        android:id="@+id/dataSyncFragment"
        android:name="com.example.financialplannerapp.fragments.settings.DataSyncFragment"
        android:label="Sinkronisasi Data"
        tools:layout="@layout/fragment_data_sync" />

    <fragment
        android:id="@+id/backupRestoreFragment"
        android:name="com.example.financialplannerapp.fragments.settings.BackupRestoreFragment"
        android:label="Pencadangan &amp; Pemulihan"
        tools:layout="@layout/fragment_backup_restore" />

    <fragment
        android:id="@+id/helpAndFAQFragment"
        android:name="com.example.financialplannerapp.fragments.settings.HelpAndFAQFragment"
        android:label="Pusat Bantuan &amp; FAQ"
        tools:layout="@layout/fragment_help_and_f_a_q" />

    <fragment
        android:id="@+id/contactUsReportFragment"
        android:name="com.example.financialplannerapp.fragments.settings.ContactUsReportFragment"
        android:label="Hubungi Kami"
        tools:layout="@layout/fragment_contact_us_report" />

</navigation>