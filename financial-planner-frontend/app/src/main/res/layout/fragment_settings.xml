<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.settings.SettingsFragment">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- User Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/profileSettingsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Profil Pengguna"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profileSettingsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat dan ubah profil pengguna Anda" 
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/profileSettingsSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Offline SQLite] Melihat data, [Online Required] untuk sinkronisasi perubahan"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Security Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/securitySettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_lock_lock"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/securitySettingsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keamanan"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/securitySettingsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Atur PIN/Biometrik lokal"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/securitySettingsSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Offline SQLite] Atur PIN/Biometrik lokal"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- App Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/appSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/appSettingsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pengaturan Aplikasi"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/appSettingsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tema, Bahasa, Mata Uang Default, Notifikasi"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/appSettingsSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Offline SQLite] Tema, Bahasa, Mata Uang Default, Notifikasi Lokal"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Data Sync Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dataSyncCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_popup_sync"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/dataSyncTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sinkronisasi Data"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dataSyncDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status Sinkronisasi dan Sinkronkan Sekarang"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/dataSyncSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Online Required] Cek koneksi dan sinkronisasi data"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Backup & Restore Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/backupRestoreCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_save"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/backupRestoreTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Backup &amp; Restore Lokal"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/backupRestoreDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Backup dan restore data dari berbagai sumber"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/backupRestoreSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Offline SQLite] Lokal, [Online Required] untuk cloud"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Help Center Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/helpCenterCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_help"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/helpCenterTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pusat Bantuan / FAQ"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/helpCenterDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Informasi bantuan dan pertanyaan umum"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/helpCenterSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Offline SQLite/Online Required] Konten bisa diunduh"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Us Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contactUsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/contactUsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hubungi Kami / Laporkan Masalah"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/contactUsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kirim feedback atau laporkan masalah"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/contactUsSubdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Online Required] Mengirim feedback ke server"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorPrimary"
                        android:rotation="0" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- App Version -->
            <TextView
                android:id="@+id/appVersionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Versi Aplikasi: 1.0.0"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>