<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.financialplannerapp.viewmodels.DashboardViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".fragments.main.DashboardFragment">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Hi, ` + viewModel.userName}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/dashboardInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is your personal finance dashboard. You can track expenses, set budgets, and more."
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Grafik mini pemasukan vs. pengeluaran -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/incomeExpenseChart"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardInstructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Status ringkas anggaran -->
    <TextView
        android:id="@+id/budgetStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Budget: Rp3.000.000 dari Rp5.000.000"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/incomeExpenseChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pintasan tambah transaksi -->
    <Button
        android:id="@+id/addTransactionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Transaksi"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/budgetStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pengingat tagihan/hutang (opsional) -->
    <TextView
        android:id="@+id/upcomingReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pengingat: Bayar cicilan motor tanggal 25"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/addTransactionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>